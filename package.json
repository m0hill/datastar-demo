{
  "name": "my-app",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "build:css": "tailwindcss -i ./styles.css -o ./public/styles.css",
    "lint": "bunx oxlint@latest",
    "format": "biome check --write .",
    "cf-typegen": "wrangler types",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply todo-app --local",
    "db:migrate": "wrangler d1 migrations apply todo-app --remote",
    "db:studio": "TARGET=production drizzle-kit studio --config=drizzle.config.ts",
    "db:studio:local": "TARGET=local drizzle-kit studio --config=drizzle.config.ts"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "datastar-sdk": "^1.0.0-beta.11",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "lint-staged": "^16.1.2",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "simple-git-hooks": "^2.13.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.5",
    "wrangler": "^4.25.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "tailwindcss": "^4.1.11"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": [
      "bunx oxlint@latest",
      "biome check --write ."
    ]
  }
}
